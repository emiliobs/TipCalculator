<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TipCalculatorMAUIApp.MainPage"
             BackgroundColor="White"
             Title="Tip Calculator!">

    <ScrollView>
        <VerticalStackLayout
            Padding="5"
            Spacing="10">

            <BoxView HeightRequest="10" Color="Transparent" />

            <Label
                Text="Tip Calculator"
                FontSize="48"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                TextColor="#8B3FDB"
                Margin="0,20,0,40" />

            <Label
                Text="Bill Amount"
                FontSize="24"
                FontAttributes="Bold"
                TextColor="#000000"
                Margin="0,0,0,10" />

            <Border
                Stroke="#D1D5DB"
                StrokeThickness="2"
                BackgroundColor="White"
                StrokeShape="RoundRectangle 12"
                Padding="15,0">
                <Entry
                    x:Name="BillAmountEntry"
                    Placeholder="Enter bill amount"
                    PlaceholderColor="#9CA3AF"
                    Keyboard="Numeric"
                    FontSize="20"
                    TextColor="#000000"
                    BackgroundColor="Transparent"
                    HeightRequest="60"
                    TextChanged="OnBillAmountChanged" />
            </Border>

            <Label
                Text="Select Tip Percentage"
                FontSize="24"
                FontAttributes="Bold"
                TextColor="#000000"
                Margin="0,20,0,10" />

            <Grid
                ColumnDefinitions="*,*,*"
                ColumnSpacing="15"
                Margin="0,10,0,0">

                <Button
                    x:Name="Tip10Button"
                    Text="10%"
                    FontSize="24"
                    FontAttributes="Bold"
                    Grid.Column="0"
                    Clicked="OnTipPercentageClicked"
                    BackgroundColor="#8B3FDB"
                    TextColor="White"
                    CornerRadius="12"
                    HeightRequest="90" />

                <Button
                    x:Name="Tip15Button"
                    Text="15%"
                    FontSize="24"
                    FontAttributes="Bold"
                    Grid.Column="1"
                    Clicked="OnTipPercentageClicked"
                    BackgroundColor="#8B3FDB"
                    TextColor="White"
                    CornerRadius="12"
                    HeightRequest="90" />

                <Button
                    x:Name="Tip20Button"
                    Text="20%"
                    FontSize="24"
                    FontAttributes="Bold"
                    Grid.Column="2"
                    Clicked="OnTipPercentageClicked"
                    BackgroundColor="#8B3FDB"
                    TextColor="White"
                    CornerRadius="12"
                    HeightRequest="90" />
            </Grid>

            <Border
                Stroke="#8B3FDB"
                StrokeThickness="3"
                BackgroundColor="#F9F5FF"
                StrokeShape="RoundRectangle 16"
                Padding="30"
                Margin="0,30,0,0">

                <VerticalStackLayout Spacing="15">
                    <Label
                        x:Name="TipAmountLabel"
                        Text="Tip Amount: $0.00"
                        FontSize="24"
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        TextColor="#000000" />

                    <Label
                        x:Name="TotalAmountLabel"
                        Text="Total: $0.00"
                        FontSize="32"
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        TextColor="#8B3FDB" />
                </VerticalStackLayout>
            </Border>

            <BoxView HeightRequest="15" Color="Transparent" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>